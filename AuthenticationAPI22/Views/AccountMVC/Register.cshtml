<script src="~/Scripts/jquery-1.10.2.js"></script>

<form class="form-group" role="form" data-bind="submit: register">
    <h4>Maak een nieuwe account aan</h4>
    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label">Gebruikersnaam</label>
        <div class="col-md-10">
            <input class="form-control" type="text" data-bind="value: registerGebruikersnaam" />
        </div>
    </div>
    <br /><br /><br />
    <div class="form-group">
        <label class="col-md-2 control-label">Password</label>

        <div class="col-md-10">
            <input class="form-control" type="password" data-bind="value: registerPassword" />
        </div>
    </div>
    <br /><br />
    <div class="form-group">
        <label class="col-md-2 control-label">Confirm Password</label>
        <div class="col-md-10">
            <input class="form-control" type="password" data-bind="value: registerPassword2" />
        </div>
    </div>
    <br /><br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
    <br /><br />
    <div class="col-md-offset-2 col-md-10">     @*indien fouten dan zichtbaar*@
        <textarea cols="40" rows="5" readonly data-bind="value: result,visible:result" style="color: #FFFFFF; font-family: Verdana; font-weight: bold; font-size: 12px; background-color: red;"></textarea>
    </div>

</form>

@section Scripts {
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/jqueryval")
}

