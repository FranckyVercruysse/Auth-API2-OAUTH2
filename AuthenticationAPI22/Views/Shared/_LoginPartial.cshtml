@using Microsoft.AspNet.Identity

@if (User.Identity.IsAuthenticated)
{
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#">Hello @User.Identity.GetUserName() !</a>
            </li>
            <li>
                <a href="#" title="uitloggen" data-bind="click: logout">Log off</a>
            </li>
        </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "AccountMVC")</li>
        <li>@Html.ActionLink("Log in", "Login", "AccountMVC")</li>
    </ul>
}

