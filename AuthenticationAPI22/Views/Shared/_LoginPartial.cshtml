@using Microsoft.AspNet.Identity

@if (User.Identity.IsAuthenticated)
{
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#">Hello @User.Identity.GetUserName() !</a>
            </li>
            <li>
                <a href="#" title="uitloggen" data-bind="click: logout">Log off</a>
            </li>
        </ul>
}
else
{
    <script>
        //dit is nodig omdat token bewaard blijft op computer alhoewel de gebruiker niet meer ingelogd is
        var tokenKey = 'accessToken';
        token = window.localStorage.getItem(tokenKey);

        console.log('token : ' + token);
        window.localStorage.removeItem(tokenKey);
    </script>


    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "AccountMVC")</li>
        <li>@Html.ActionLink("Log in", "Login", "AccountMVC")</li>
    </ul>
}

